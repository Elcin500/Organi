<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        @foreach (var item in Model.Categories)
                        {
                            <li data-filter=".@item.Name.Replace(" ","-")">@item.Name </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">

            @foreach (var item in Model.FeaturedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @item.Category.Name.Replace(" ","-")">
                    <div class="featured__item" onclick="window.location.href='@Url.Action("ShopDetails","shop",new { id=item.Id})'">
                        <div class="featured__item__pic set-bg" data-setbg="/Uploads/@item.Images.FirstOrDefault(i=>i.IsMain==true).Path">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li>
                                    <a href="#" onclick="addToCard(@item.Id,event)">
                                       <i class="fa fa-shopping-cart"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="shop" asp-action="ShopDetails" asp-route-id="@item.Id">@item.Name</a></h6>
                            <h5>@item.price.ToString("0.00")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


