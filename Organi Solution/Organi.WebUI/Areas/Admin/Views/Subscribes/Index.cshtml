@model IEnumerable<Organi.WebUI.Models.Entity.Subscribe>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <ul class="breadcrumb">
        <li>
            <p>YOU ARE HERE</p>
        </li>
        <li><a href="#" class="active">İzləyicilər</a> </li>
    </ul>
    <div class="page-title">
        <i class="icon-custom-left"></i>
        <h3>Form - <span class="semi-bold">Əsas səhifə</span></h3>
    </div>
    <div class="row" id="inbox-wrapper">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="grid simple">
                        <div class="grid-body no-border email-body">
                            <br>
                            <div class="row-fluid">

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            @*<th class="right">
                                                <a asp-action="Create" class="btn btn-sm btn-success"><i class="fa fa-plus"> </i></a>
                                            </th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td width="50px">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                        <i class="fa fa-location-arrow"> </i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

