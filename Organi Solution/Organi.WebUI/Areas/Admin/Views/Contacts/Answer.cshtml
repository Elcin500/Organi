@model Organi.WebUI.Models.Entity.Contact

@{
    ViewData["Title"] = "Details";
}


<div class="content">
    <ul class="breadcrumb">
        <li>
            <p>YOU ARE HERE</p>
        </li>
        <li><a href="#" class="active">Muracietler</a> </li>
    </ul>
    <div class="page-title">
        <i class="icon-custom-left"></i>
        <h3>Form - <span class="semi-bold">Cavab</span></h3>
    </div>
    <div class="row" id="inbox-wrapper">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="grid simple">
                        <div class="grid-body no-border email-body">
                            <br>
                            <div class="row-fluid">

                                    <form class="col-12" method="post">
                                        <div class="form-group row">
                                            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="Name" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="Email" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="Message" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <textarea asp-for="Message" class="form-control" rows="7" style="resize:none;" disabled></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="Answer" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <textarea asp-for="Answer" class="form-control" rows="7" style="resize:none;"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row ">
                                            <div class="col-10 offset-2">
                                                <button type="submit" class="btn btn-primary w-100">Gonder</button>
                                            </div>
                                        </div>
                                    </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section scripts{

    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Answer'))
            .catch(error => {
                console.error(error);
            });
    </script>

}


@section css{
    <style>
        .ck-editor_editable {
            min-height: 200px !important;
        }
    </style>
}